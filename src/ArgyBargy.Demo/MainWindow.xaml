<Window x:Class="ArgyBargy.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Click="ShowCommandLink"
                Content="Command Link Dialog"
                HorizontalAlignment="Center"
                Margin="15"/>
        
        <Button Click="ShowActionsDialog"
                Content="Actions Dialog"
                HorizontalAlignment="Center"
                Margin="15"/>

        <Button Click="ShowNormalWindow"
                Content="Normal Window"
                HorizontalAlignment="Center"
                Margin="15"/>
        
        <Button Click="ShowBusy"
                Content="Show Busy"
                HorizontalAlignment="Center"
                Margin="15"/>
    </StackPanel>
</Window>
